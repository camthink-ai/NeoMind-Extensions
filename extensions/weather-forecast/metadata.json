{
  "id": "weather-forecast",
  "name": "Weather Forecast",
  "description": "Global weather data and forecasts for any city. Provides current weather conditions including temperature, humidity, wind speed, and cloud cover.",
  "version": "0.5.8",
  "author": "CamThink",
  "license": "MIT",
  "categories": ["weather", "data"],
  "homepage": "https://github.com/camthink-ai/NeoMind-Extensions",
  "repository": "https://github.com/camthink-ai/NeoMind-Extensions",
  "readme_url": "https://raw.githubusercontent.com/camthink-ai/NeoMind-Extensions/main/extensions/weather-forecast/README.md",

  "capabilities": {
    "tools": [
      {
        "name": "query_weather",
        "display_name": "Query Weather",
        "description": "Get current weather for any city. Returns temperature, humidity, wind speed, and cloud cover.",
        "parameters": {
          "type": "object",
          "properties": {
            "city": {
              "type": "string",
              "description": "Name of the city (e.g., Beijing, London, Tokyo)"
            }
          },
          "required": ["city"]
        },
        "returns": "Weather data including temperature, humidity, wind speed, and cloud cover"
      }
    ],
    "metrics": [
      {
        "name": "temperature_c",
        "display_name": "Temperature",
        "data_type": "Float",
        "unit": "Â°C",
        "description": "Current temperature in Celsius",
        "min": -50.0,
        "max": 60.0
      },
      {
        "name": "humidity_percent",
        "display_name": "Humidity",
        "data_type": "Integer",
        "unit": "%",
        "description": "Relative humidity percentage",
        "min": 0.0,
        "max": 100.0
      },
      {
        "name": "wind_speed_kmph",
        "display_name": "Wind Speed",
        "data_type": "Float",
        "unit": "km/h",
        "description": "Wind speed in kilometers per hour",
        "min": 0.0,
        "max": 200.0
      },
      {
        "name": "cloud_cover_percent",
        "display_name": "Cloud Cover",
        "data_type": "Integer",
        "unit": "%",
        "description": "Cloud cover percentage",
        "min": 0.0,
        "max": 100.0
      }
    ],
    "commands": [
      {
        "name": "query_weather",
        "display_name": "Query Weather",
        "description": "Query current weather for any city. Returns temperature, humidity, wind speed, and cloud cover.",
        "parameters": {
          "type": "object",
          "properties": {
            "city": {
              "type": "string",
              "description": "Name of the city"
            }
          },
          "required": []
        }
      },
      {
        "name": "refresh",
        "display_name": "Refresh Weather Data",
        "description": "Force refresh cached weather data for the default city",
        "parameters": {
          "type": "object",
          "properties": {},
          "required": []
        }
      }
    ]
  },

